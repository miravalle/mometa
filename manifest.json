{
  "manifest_version": 2,

  "name": "Mo'Meta",
  "description": "Annotate YouTube vids with more metadata.",
  "version": "1.0",

  "permissions": [
      "*://youtube.com/watch*",
      "*://*.youtube.com/watch*"
      ],
  "icons": { "16": "images/16x16.png", "48": "images/48x48.png", "64": "images/64x64.png" },
  "browser_action": {
    "default_icon": "images/32x32.png",
    "popup": "mometa.html"
  },
  "content_scripts": [
    {
    "matches": ["*://*.youtube.com/watch*"],
    "js": ["jquery-2.1.3.min.js", "mometa.js"],
    "web_accessible_resources": [
    ],
    "run_at" : "document_idle"
    }
  ]
}
